        $(document).ready(function () {
            $("#Nombre").blur(function () {
                if ($("#AreaId").val() === "--- Seleccionar ---") {
                    alert("Debe seleccionar un Área.");
                    $("#AreaId").focus();
                }
            });
        });
        </script>

